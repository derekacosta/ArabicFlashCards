<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.im_working.arabicflashcards.ResultsActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/PlayAgainButton"
        android:layout_width="180dp"
        android:layout_height="58dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Play Again!"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="375dp" />

    <Button
        android:id="@+id/ReturnToHomeButton"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:text="Return to Main Menu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="435dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/QuizResults"
        android:layout_width="296dp"
        android:layout_height="29dp"
        android:text="Quiz Results"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="75dp"
        android:text="TIme"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CorrectAnswers"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="125dp"
        android:text="Correct Answers"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CorrectNum"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="125dp"
        android:text="Correct"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/Time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/IncorrectAnswers"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:text="Incorrect Answers"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/IncorrectNum"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="180dp"
        android:text="Incorrect"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/CorrectNum"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/QuizDuration"
        android:layout_width="143dp"
        android:layout_height="41dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="75dp"
        android:text="Quiz Duration"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/YouKnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:text="You know:"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Words"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/Words"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_marginTop="275dp"
        android:text="Words"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ArabicWords"
        app:layout_constraintLeft_toRightOf="@+id/YouKnow" />

    <TextView
        android:id="@+id/ArabicWords"
        android:layout_width="156dp"
        android:layout_height="31dp"
        android:text="Arabic Words!"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Words"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="275dp" />

</android.support.constraint.ConstraintLayout>
