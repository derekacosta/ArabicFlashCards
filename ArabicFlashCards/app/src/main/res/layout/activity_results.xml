<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.im_working.arabicflashcards.ResultsActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/ResultsPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quiz Results"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="29dp"
        android:layout_marginRight="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/ResultsPageTimeTitle"
        android:layout_width="142dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quiz Duration:"
        tools:layout_editor_absoluteY="118dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/ResultsPageWrong"
        android:layout_width="162dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Incorrect Anwers:"
        tools:layout_editor_absoluteY="266dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/ResultsPageCorrect"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Correct Anwers:"
        tools:layout_editor_absoluteY="192dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/TimeDisplay"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Time"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="118dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/CorrectPercentage"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Correct"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="192dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/IncorrectPercentage"
        android:layout_width="153dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Incorrect"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="266dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/ReturnToHomeButton"
        android:layout_width="181dp"
        android:layout_height="52dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Return to Main Menu"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="567dp"
        tools:layout_editor_absoluteX="319dp" />

    <EditText
        android:id="@+id/ThankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Thanks for Playing!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteY="664dp"
        android:layout_marginRight="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/PlayAgainButton"
        android:layout_width="180dp"
        android:layout_height="58dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Play Again!"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="500dp" />

    <EditText
        android:id="@+id/YouKnowButton"
        android:layout_width="122dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="You Know:"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="391dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/KnownWords"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="words"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/YouKnowButton"
        app:layout_constraintRight_toLeftOf="@+id/ArabicWords"
        tools:layout_editor_absoluteY="393dp" />

    <EditText
        android:id="@+id/ArabicWords"
        android:layout_width="162dp"
        android:layout_height="47dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Arabic Words!"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="393dp" />
</android.support.constraint.ConstraintLayout>
